extends ../../../view/main
append blockCss
    +link('/css/md/login.min.css')
append blockJavascript
    script
        include ./bin/frontend.min.js
append blockMain
    img.countdown-image(src='/img/countdown.png')
    .col-md-4.col-sm-4.rounded#loginBox
        p#loginError(style='color:red')
        .form-group.row
            label.col-sm-3.col-form-label(for='username') Username
            .col-sm-9
                input#username.form-control.form-control-plaintext(type='text' placeholder='Username' onkeyup='$$.login.loginOnKeyup(event)')
        .form-group.row
            label.col-sm-3.col-form-label(for='password') Password
            .col-sm-9
                input#password.form-control.form-control-plaintext(type='password' placeholder='Password' onkeyup='$$.login.loginOnKeyup(event)')
        button.btn.btn-primary(type='submit' style='margin: 4px' onclick='$$.login.loginOnClick()') Login
extends ../../../view/main
append blockCss
    +link('/css/md/adminQuestion.min.css')
    +link('/css/font-awesome.min.css')
    +link('/css/froala_editor.pkgd.min.css')
append blockJavascript
    +script('/js/froala_editor.pkgd.min.js')
    script
        include ./bin/frontend.min.js
append blockMain
    .container-fluid(style='margin-top:6px')
        #question(role='tablist' aria-multiselectable='true')
    .modal.fade#modalQuestion(style='color:black')
        .modal-dialog.modal-lg(role='document')
            .modal-content
                .modal-header
                    h5.modal-title Question
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') &times;
                .modal-body
                    p#qsModalError(style='color:red')
                    .form-group
                        textarea#qContent(style='width:100%' rows=3 placeholder='Content')
                        div.float-right.qAnswer
                            p A.
                            textarea#qAnswerA(rows=2 placeholder='A')
                        div.float-right.qAnswer
                            p B.
                            textarea#qAnswerB(rows=2 placeholder='B')
                        div.float-right.qAnswer
                            p C.
                            textarea#qAnswerC(rows=2 placeholder='C')
                        div.float-right.qAnswer
                            p D.
                            textarea#qAnswerD(rows=2 placeholder='D')
                        div.float-right.qAnswer
                            p Hint.
                            textarea#qHint(rows=2 placeholder='Hint')
                        div.float-right.qAnswer
                            p Clip.
                            input.form-control#qClip(type='text' placeholder='Clip')
                .modal-footer
                    button.btn.btn-primary.confirmYes(type='button' onclick="$$.aQuestion.save(); return false;") Save
                    button.btn.btn-secondary(type='button' data-dismiss='modal') No